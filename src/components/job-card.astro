---
import { getLangFromUrl } from '../i18n/get-lang-from-url'
import { getTranslations } from '../i18n/get-translations'
import List from './list.astro'

interface Props {
  company: string
  position: string
  time: string
  experience: string
  techStack: string[]
}

const { company, position, time, experience, techStack } = Astro.props
const lang = getLangFromUrl(Astro.url.pathname)
const t = getTranslations(lang)
---

<article>
  <hgroup class="mb-2">
    <h3 class="text-lg font-600 sm:text-xl">{position}</h3>
    <h3 class="text-lg font-600 sm:text-xl">{company}</h3>
  </hgroup>
  <span class="text-sm font-italic font-300 mb-2 inline-block sm:text-base"
    >{time}</span
  >
  <p class="text-sm font-300 mb-2 sm:text-base">
    {experience}
  </p>
  <p class="text-sm font-500 mb-1 sm:text-base">
    {t('resume.techStackTitle')}:
  </p>
  <List items={techStack} />
</article>

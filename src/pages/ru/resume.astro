---
import ResumeLayout from '../../layouts/resume-layout.astro'
import JobCard from '../../components/job-card.astro'
import ResumeSection from '../../components/resume-section.astro'
import List from '../../components/list.astro'
import skills from '../../data/skills.json'
import { getTranslations } from '../../i18n/get-translations'
import { getLangFromUrl } from '../../i18n/get-lang-from-url'

const lang = getLangFromUrl(Astro.url.pathname)
const t = getTranslations(lang)
---

<ResumeLayout>
  <ResumeSection title={t('resume.summary.title')}>
    <p class="text-sm font-300 sm:text-base">
      {t('resume.summary.text')}
    </p>
  </ResumeSection>
  <ResumeSection
    title={t('resume.experience.title')}
    className="space-y-2.5 sm:space-y-5"
  >
    <JobCard
      position={t('resume.experience.companies.hivexiq.position')}
      company={t('resume.experience.companies.hivexiq.name')}
      time={t('resume.experience.companies.hivexiq.time')}
      experience={t('resume.experience.companies.hivexiq.description')}
      techStack={t('resume.experience.companies.hivexiq.techStack')}
    />
    <JobCard
      position={t('resume.experience.companies.chesstery.position')}
      company={t('resume.experience.companies.chesstery.name')}
      time={t('resume.experience.companies.chesstery.time')}
      experience={t('resume.experience.companies.chesstery.description')}
      techStack={t('resume.experience.companies.chesstery.techStack')}
    />
  </ResumeSection>
  <ResumeSection title={t('resume.skills.title')}>
    <List items={skills} direction="column" />
  </ResumeSection>
</ResumeLayout>
